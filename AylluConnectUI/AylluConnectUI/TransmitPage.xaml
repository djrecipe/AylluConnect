<Page x:Class="AylluConnectUI.TransmitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AylluConnectUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransmitPage">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Height="20" Width="100" Text="{Binding DestinationAddress}" Margin="10"></TextBox>
            <Button Content="Transmit" Width="100" Margin="10" Command="{Binding CommandTransmit}"></Button>
        </StackPanel>
    </Grid>
</Page>
